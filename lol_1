class Student:
    lst = []
    def __init__(self, name, surname, grade):
        self.name = name
        self.surname = surname
        self.grade = grade

    @staticmethod
    def add_grade(self, grade, lst):
        lst.append(grade)

    def display(self):
        return f"Данные студента: Имя {self.name}, фамилия {self.surname}, оценка {self.grade}"


class Group:
    lst_1 = ["Zero"]
    def __init__(self, name, student):
        self.name = name
        self.student = student

    def add_student(self, lst_1):
        lst_1.append(self.student)


    def display_group(self):
        return f"Имя {self.name}, {self.lst_1}"


x = Student(name="Sany", surname="lol", grade=10)

print(x. display())
y = Group(name ="San", student="port")
print(y. display_group())
